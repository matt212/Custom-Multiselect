    <Script>
        $(document).ready(function () {
            /*multiselect ctrl Init*/
            multiselect.baseInit({ id: 'cltrl_filter_gender', fieldname: 'gender' })
            multiselect.baseInit({ id: 'cltrl_filter_first_name', fieldname: 'first_name' })

        })

        // /*basefunction can be anything */ 
